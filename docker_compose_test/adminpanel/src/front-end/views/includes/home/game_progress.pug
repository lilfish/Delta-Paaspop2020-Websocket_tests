div.card(class=current_game==true ? "display-none" : "")
	small.float-right (ik luister naar OSC)
	h3.card-title Op het moment is er geen game gestart 
	hr
	div.row
		div.col.col-lg-6 
			h6 Acties
			button(onClick="start_game('"+next_game._id+"')").button.button-success.button-small spel starten
			button(onClick="osc_toggle()").button.button-warning.button-small OSC uitzetten
		div.col.col-lg-6=next_game.name

div.card(class=current_game==true ? "" : "display-none")
	div.row
		h3.card-title.col.col-lg-8 Op het moment speelt 
			strong=last_game.name
		div.col.col-lg-4.align-right (ik luister naar OSC)
	hr
	div.row
		div.col.col-lg-4
			h6 Acties
			button(onClick="openModal('stop_game')").button.button-danger.button-small Snel stoppen
			button(onClick="osc_toggle()").button.button-warning.button-small OSC uitzetten
		div.col.col-lg-8
			h6 Progress
			div.progress-bar.striped.animated
				span.progress-bar-green(style={width: '80%'})
